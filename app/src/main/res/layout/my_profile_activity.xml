<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:id="@+id/iv_background_img"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:src="@color/colorBlack"
            />

            <ImageView
                    android:id="@+id/iv_back_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/arrow_back_white"
            />

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/dummy_icon"
                />
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/camera_icon"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom|right"
                />
            </FrameLayout>

        </RelativeLayout>

        <com.utalli.RobotoRegularTextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_top"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/grey"
                app:layout_constraintRight_toLeftOf="@+id/iv_editProfile_icon"
                android:text="@string/text_name"
        />
        
        <com.utalli.RobotoMediumTextView
                android:id="@+id/tv_profileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16sp"
                android:text="Janice Crawford"
        />


        <ImageView
                android:id="@+id/iv_editProfile_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:src="@drawable/edit_icon"
                android:background="@drawable/solid_circle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        />

        <com.utalli.RobotoRegularTextView
                android:id="@+id/contactDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_profileName"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:text="@string/text_contact_details"
        />

        <com.utalli.RobotoMediumTextView
                android:id="@+id/tv_contactDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/contactDetails"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:text="+ 9634324545623546254"
        />


        <View
                android:id="@+id/vieww"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/grey_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_contactDetails"
                android:layout_marginTop="16dp"
        />


        <Button
                android:id="@+id/tv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/color_blue"
                android:background="@drawable/rounded_rect_white"
                android:text="LOG OUT"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.core.widget.NestedScrollView>