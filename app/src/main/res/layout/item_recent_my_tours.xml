<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.utalli.RobotoRegularTextView
                android:id="@+id/tv_tour_states"
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_txt_current_tour"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Andaman and Nicobar islands , AndhraPradesh, Chandigarh, assam, arunachal Pradesh"
                android:padding="12dp"
                android:textSize="12sp"
                app:layout_constraintRight_toLeftOf="@+id/tv_tour_charges"
        />

        <com.utalli.RobotoRegularTextView
                android:id="@+id/tv_tour_charges"
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tv_tour_states"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Private- $200"
                android:textColor="@color/colorBlack"
                android:padding="12dp"
                android:textSize="12sp"
        />

        <com.utalli.RobotoRegularTextView
                android:id="@+id/txt_tourDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_tour_states"
                android:padding="12dp"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Tour Date : "
        />

        <com.utalli.RobotoRegularTextView
                android:id="@+id/tv_tourDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@+id/tv_tour_states"
                app:layout_constraintLeft_toRightOf="@+id/txt_tourDate"
                android:text="ndjbjfbj  njke"
        />


        <View android:layout_width="0dp" android:layout_height="1dp"
              app:layout_constraintTop_toBottomOf="@+id/txt_tourDate"
              android:layout_marginTop="15dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:background="@color/grey_4"
              android:id="@+id/divider"
        />


        <com.utalli.RobotoRegularTextView
                android:id="@+id/tv_completed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                android:padding="10dp"
                android:gravity="center"
                android:text="Completed"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/colorBlack"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>