<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_splash_main"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
            android:id="@+id/iv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.utalli.RobotoRegularTextView
            android:id="@+id/tv_getStarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect_blue"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="@string/text_get_started"
            android:visibility="gone"
        />

        <com.utalli.RobotoRegularTextView
            android:id="@+id/tv_learnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="@color/color_blue"
            android:textSize="16sp"
            android:text="@string/text_learn_more"
            android:visibility="gone"
        />

    </LinearLayout>


</RelativeLayout>