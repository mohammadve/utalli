<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_splash_main"
        android:background="@color/colorWhite"

>


    <ImageView android:layout_width="112dp" android:layout_height="112dp"
               android:src="@drawable/ic_logo"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="110dp"


    />


    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/grey_bg"
               android:scaleType="fitXY"
               android:layout_alignParentBottom="true"
    />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
    >

        <com.utalli.RobotoRegularTextView
                android:id="@+id/tv_getStarted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_rect_blue"
                android:textColor="@android:color/white"
                android:text="@string/text_get_started"
                android:visibility="gone"
        />

        <com.utalli.RobotoRegularTextView
                android:id="@+id/tv_learnMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:text="@string/text_learn_more"
                android:visibility="gone"
        />

    </LinearLayout>
</RelativeLayout>