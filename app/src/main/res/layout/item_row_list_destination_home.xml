<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_place_pic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_place_name"

            android:src="@drawable/ic_popular_destinations_image_placeholder"
    />

    <com.utalli.RobotoRegularTextView
            android:id="@+id/tv_place_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_place_pic"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textColor="@color/colorBlack"
            android:text="Australia"
            android:maxLines="1"
    />


</androidx.constraintlayout.widget.ConstraintLayout>