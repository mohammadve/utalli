<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blue"
            app:layout_constraintTop_toTopOf="parent">

        <com.utalli.RobotoMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:text="@string/text_settings"/>

    </androidx.appcompat.widget.Toolbar>


        <ImageView
                android:id="@+id/profile_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/notifications_icon"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintRight_toLeftOf="@+id/notification_switch"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintLeft_toLeftOf="parent"
        />


        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/notification_switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:textSize="16sp"
                android:checked="false"
                android:theme="@style/SCBSwitch"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintLeft_toRightOf="@+id/profile_image"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/text_notification"
        />

    <View
            android:id="@+id/view_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
          app:layout_constraintTop_toBottomOf="@+id/notification_switch"
          android:background="@color/grey_1"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
    />


    <ImageView
            android:id="@+id/iv_help_support"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/help_support_icon"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_1"

    />

    <com.utalli.RobotoRegularTextView
            android:id="@+id/tv_helpSupport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_help_support"
            app:layout_constraintTop_toBottomOf="@+id/view_1"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:text="@string/text_help_and_support"
    />

    <ImageView
            android:id="@+id/iv_right_arrow_helpSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            app:layout_constraintTop_toTopOf="@+id/tv_helpSupport"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/right_arrow"
    />


    <View
            android:id="@+id/view_2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_helpSupport"
            android:background="@color/grey_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />



    <ImageView
            android:id="@+id/iv_privacyPolicy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/privacy_policy_icon"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_2"

    />

    <com.utalli.RobotoRegularTextView
            android:id="@+id/tv_privacyPolicy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_privacyPolicy"
            app:layout_constraintTop_toBottomOf="@+id/view_2"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:text="@string/text_privacy_policy"
    />

    <ImageView
            android:id="@+id/iv_right_arrow_privacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            app:layout_constraintTop_toTopOf="@+id/tv_privacyPolicy"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/right_arrow"
    />


    <View
            android:id="@+id/view_3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_privacyPolicy"
            android:background="@color/grey_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />


    <ImageView
            android:id="@+id/iv_aboutUs"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/about_us_icon"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_3"

    />

    <com.utalli.RobotoRegularTextView
            android:id="@+id/tv_aboutUs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_aboutUs"
            app:layout_constraintTop_toBottomOf="@+id/view_3"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:text="@string/text_about_us"
    />

    <ImageView
            android:id="@+id/iv_right_arrow_aboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            app:layout_constraintTop_toTopOf="@+id/tv_aboutUs"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/right_arrow"
    />































</androidx.constraintlayout.widget.ConstraintLayout>